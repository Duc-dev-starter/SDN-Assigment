{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "target": "ES6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
        // "baseUrl": "./src",
        // "paths": {
        //     "modules/*": ["modules/*"],
        //     "core/*": ["core/*"]
        // }
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}